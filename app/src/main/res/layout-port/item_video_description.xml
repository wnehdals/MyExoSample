<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/video_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            tools:text="it is video sample"/>
        <TextView
            android:id="@+id/video_description_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/video_description_title"
            app:layout_constraintStart_toStartOf="@+id/video_description_title"
            android:text="It is video sample description. Please enjoy the video"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/video_description_download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_download_24"
            app:layout_constraintTop_toBottomOf="@+id/video_description_desc"
            app:layout_constraintStart_toStartOf="@+id/video_description_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:background="@null"
            android:layout_marginTop="16dp"/>
        <ImageButton
            android:id="@+id/video_description_share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/video_description_download_button"
            app:layout_constraintTop_toTopOf="@+id/video_description_download_button"
            android:src="@drawable/ic_baseline_share_24"
            android:background="@null"
            android:layout_marginStart="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>